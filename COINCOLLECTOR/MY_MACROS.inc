INCLUDE IRVINE32.INC

 SETCOLOR MACRO
       mov eax,(BLACK*16)+(BLUE*6)
			 call settextcolor
 ENDM

 DELAY1 MACRO
       CALL DELAY
 ENDM

 CLEAR_SCREEN MACRO
       CALL CLRSCR
 ENDM

 NEW_LINE MACRO
       CALL CRLF
 ENDM

 GOTO_XY MACRO X,Y
       MOV DH,X
       MOV DL,Y
       CALL GOTOXY
 ENDM

 READ_STRING MACRO STR
       MOV EDX , STR
       CALL READSTRING
 ENDM

 WRITE_STRING MACRO X,Y,STR
       GOTO_XY X,Y
       MOV EDX,OFFSET STR
       CALL WRITESTRING
 ENDM

  WRITE_STRING_NO MACRO X,Y,STR
       GOTO_XY X,Y
       MOV EDX,STR
       CALL WRITESTRING
 ENDM

XY_COUT MACRO X,Y,text
       LOCAL string     
.data
       string BYTE text,0 
.code
       GOTO_XY X,Y
       PUSH EDX
       MOV EDX,OFFSET string
       CALL WRITESTRING
       POP EDX
ENDM

XY_COUTINT MACRO X,Y,S
      GOTO_XY X,Y
      PUSH EAX
      MOV AL,S
      CALL WRITEINT
      POP EAX
ENDM

COUTINT MACRO S
      PUSH EAX
      MOV AL,S
      CALL WRITEINT
      POP EAX
ENDM

CHAR_CIN MACRO INPUT
     CALL READCHAR
     MOV INPUT,AL
ENDM

CHAR_CIN1 MACRO X,Y,INPUT
     GOTO_XY X,Y
     CALL READCHAR
     MOV INPUT,AL
ENDM

 WRITE_CHAR MACRO CHAR_1
     MOV AL,CHAR_1
     CALL WRITECHAR
 ENDM

 WRITE_CHAR_XY MACRO X,Y,CHAR_1
     GOTO_XY X,Y
     MOV AL,CHAR_1
     CALL WRITECHAR
 ENDM